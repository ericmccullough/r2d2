<tr>
  <td><%= server.name %></td>
  <td><%= server.ip %></td>
  <td>
    <%= link_to edit_server_path(server), { class: "btn btn_link btn-xs" } do %>
      <span class='glyphicon glyphicon-pencil'></span>
    <% end %>
      <button type='button' class="btn btn-link"
        data-toggle="modal" data-target="#server_delete"
        data-servername="<%= server.name %>" data-id="<%= server.id %>">
        <span class='glyphicon glyphicon-remove'></span>
      </button>
</tr>
